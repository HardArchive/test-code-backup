# *****************************
# 预定义
# *****************************
CC = g++
AR = ar
RANLIB = ranlib
CFLAGS = -g -O2 -DOTL_ODBC_UNIX -D __LINUX__
INCLUDES = -I./ -I../ -I/usr/include -I$ACE_ROOT/ace -I../Common -I../Reactor -I../IObject -I../LogSystem -I../Message -I../Encrypt -I../PacketParse -I../UDP -I../Proactor -I../Console
LIBS = -L/usr/lib -LACE_ROOT/lib  -L/usr/local/lib -L./ -L../ -lACE -ldl -lPacketParse
# -L${ICONV}/lib -I${ICONV}/include
# *****************************
# 变换规则
# *****************************
# Here are some rules for converting .cpp -> .o
.SUFFIXES: .cpp .o
.cpp.o:
	@$(CC) $(CFLAGS) ${INCLUDES} -c -g $*.cpp 
	@echo '----- '$*.cpp' is compiled ok!'

# Here are some rules for converting .c -> .o
.SUFFIXES: .c .o
.c.o:
	@$(CC) $(CFLAGS) -c $*.c 
	@echo '----- '$*.c' is compiled ok!'


