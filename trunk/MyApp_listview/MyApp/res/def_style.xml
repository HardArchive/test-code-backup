  <class name="dlg_footer" skin="dlg_footer" font="0000" crtext="000000" x-margin="4" />
  <class name="head_text_title" font="0004" crtext="FFFFFF" textmode="8030"/>
  <class name="cmn_imgbtn" cursor="hand"/>
  
  <class name="dlg_title" font="0104" crtext="0f6ec0"/>
  <class name="dlg_mulit_text" textmode="A210" font="0104" crtext="0f6ec0"/>
  <class name="dlg_mulit_normal_text" textmode="A210" font="0000" crtext="000000"/>
  <class name="common_btn" skin="common_btn" font="0000" crtext="000000" textmode="25" cursor="hand"/>
